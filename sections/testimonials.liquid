<section class="testimonials-section">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <p class="section-subtitle">{{ section.settings.subtitle }}</p>

    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <div class="rating">
            {% for i in (1..5) %}
              <span class="star {% if i <= block.settings.rating %}filled{% endif %}">★</span>
            {% endfor %}
          </div>
          <p class="testimonial-text">"{{ block.settings.testimonial }}"</p>
          <p class="testimonial-author">— {{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .testimonials-section {
    padding: 4rem 0;
    background: white;
  }

  .testimonials-section h2 { text-align: center; margin-bottom: 0.5rem; }
  .section-subtitle { text-align: center; color: var(--color-text-light); margin-bottom: 3rem; }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .testimonial-card {
    background: var(--color-background-alt);
    padding: 2rem;
    border-radius: 8px;
    border-left: 4px solid var(--color-primary);
  }

  .rating { margin-bottom: 1rem; font-size: 1.2rem; }
  .star { color: #ddd; }
  .star.filled { color: #ffc107; }

  .testimonial-text {
    font-style: italic;
    margin-bottom: 1rem;
    line-height: 1.8;
  }

  .testimonial-author { font-weight: 600; color: var(--color-primary); }

  @media (max-width: 768px) {
    .testimonials-grid { grid-template-columns: 1fr; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Customer Reviews"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Real feedback from our customers"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "label": "Rating",
          "default": 5
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "Great meals and very convenient!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name",
          "default": "John Doe"
        }
      ]
    }
  ]
}
{% endschema %}