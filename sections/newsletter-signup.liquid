<section class="newsletter-section">
  <div class="container newsletter-container">
    <div class="newsletter-content">
      {% if section.settings.kicker != blank %}
        <p class="newsletter-kicker">{{ section.settings.kicker }}</p>
      {% endif %}

      <h2 class="newsletter-title">{{ section.settings.heading }}</h2>

      {% if section.settings.subheading != blank %}
        <p class="newsletter-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.show_bullets %}
        <ul class="newsletter-benefits">
          {% if section.settings.bullet_1 != blank %}
            <li>{{ section.settings.bullet_1 }}</li>
          {% endif %}
          {% if section.settings.bullet_2 != blank %}
            <li>{{ section.settings.bullet_2 }}</li>
          {% endif %}
          {% if section.settings.bullet_3 != blank %}
            <li>{{ section.settings.bullet_3 }}</li>
          {% endif %}
        </ul>
      {% endif %}
    </div>

    <div class="newsletter-form-wrapper">
      {% form 'customer', class: 'newsletter-form' %}
        {% if form.posted_successfully? %}
          <p class="newsletter-success">
            {{ section.settings.success_message }}
          </p>
        {% else %}
          <div class="newsletter-fields">
            <label class="sr-only" for="NewsletterEmail-{{ section.id }}">
              {{ 'general.newsletter_form.email_label' | t | default: 'Email address' }}
            </label>

            <input
              type="email"
              id="NewsletterEmail-{{ section.id }}"
              name="contact[email]"
              class="newsletter-input"
              placeholder="{{ section.settings.placeholder }}"
              autocorrect="off"
              autocapitalize="off"
              required
            >

            {%- comment -%}
              Mark this signup as marketing so Shopify syncs it as a subscriber,
              and Klaviyo can ingest it via the native Shopify integration.[web:76][web:80]
            {%- endcomment -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <input type="hidden" name="contact[accepts_marketing]" value="true">

            <button type="submit" class="btn newsletter-button">
              {{ section.settings.button_label }}
            </button>
          </div>

          {% if form.errors %}
            <ul class="newsletter-errors" aria-live="polite">
              {% for field in form.errors %}
                <li>{{ form.errors.messages[field] }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        {% endif %}
      {% endform %}

      {% if section.settings.note != blank %}
        <p class="newsletter-note">
          {{ section.settings.note }}
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .newsletter-section {
    padding: 4rem 0;
    background: var(--color-background-alt);
  }

  .newsletter-container {
    display: grid;
    grid-template-columns: minmax(0, 1.3fr) minmax(0, 1fr);
    gap: 3rem;
    align-items: center;
  }

  .newsletter-content {
    max-width: 520px;
  }

  .newsletter-kicker {
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .newsletter-title {
    margin-bottom: 0.75rem;
  }

  .newsletter-subheading {
    color: var(--color-text-light);
    margin-bottom: 1.25rem;
  }

  .newsletter-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .newsletter-benefits li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .newsletter-benefits li::before {
    content: "âœ”";
    color: var(--color-primary);
    font-size: 0.9rem;
  }

  .newsletter-form-wrapper {
    background: #ffffff;
    border-radius: 12px;
    padding: 1.75rem 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .newsletter-fields {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .newsletter-input {
    flex: 1 1 160px;
    min-width: 0;
    padding: 0.8rem 0.9rem;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    font-size: 0.95rem;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(90, 125, 74, 0.1);
  }

  .newsletter-button {
    flex: 0 0 auto;
    padding-inline: 1.4rem;
  }

  .newsletter-success {
    margin: 0;
    color: var(--color-primary);
    font-weight: 600;
  }

  .newsletter-errors {
    margin-top: 0.75rem;
    color: #d93025;
    font-size: 0.85rem;
  }

  .newsletter-note {
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  @media (max-width: 768px) {
    .newsletter-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .newsletter-form-wrapper {
      padding: 1.5rem 1.25rem;
    }

    .newsletter-fields {
      flex-direction: column;
      align-items: stretch;
    }

    .newsletter-button {
      width: 100%;
      justify-content: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Newsletter signup",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Eyebrow text",
      "default": "Join the list"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Save up to 20% on your first meal plan"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Get weekly menus, nutrition tips, and early access to promos."
    },
    {
      "type": "checkbox",
      "id": "show_bullets",
      "label": "Show bullet list",
      "default": true
    },
    {
      "type": "text",
      "id": "bullet_1",
      "label": "Bullet 1",
      "default": "Fresh, ready-to-eat chef meals"
    },
    {
      "type": "text",
      "id": "bullet_2",
      "label": "Bullet 2",
      "default": "Nutritionist-approved menus"
    },
    {
      "type": "text",
      "id": "bullet_3",
      "label": "Bullet 3",
      "default": "Exclusive subscriber-only offers"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Get 20% off"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing! Check your inbox for your welcome email."
    },
    {
      "type": "textarea",
      "id": "note",
      "label": "Small print / note",
      "default": "By subscribing, you agree to receive marketing emails. You can unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter signup",
      "category": "Promotional"
    }
  ]
}

{% endschema %}
