<section class="subscription-cta" style="background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}');">
  <div class="subscription-overlay"></div>
  <div class="subscription-content">
    <div class="container">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>
      <a href="{{ section.settings.link_url }}" class="btn">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>

{% stylesheet %}
  .subscription-cta {
    position: relative;
    padding: 4rem 0;
    background-size: cover;
    background-position: center;
    color: white;
    text-align: center;
  }

  .subscription-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
  }

  .subscription-content {
    position: relative;
    z-index: 2;
  }

  .subscription-cta h2 { font-size: 2.5rem; margin-bottom: 1rem; }
  .subscription-cta p { font-size: 1.1rem; margin-bottom: 2rem; }

  @media (max-width: 768px) {
    .subscription-cta h2 { font-size: 1.75rem; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Subscription CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Save 20% with a Meal Plan"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Subscribe to weekly meal plans and save big"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Plans"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    }
  ]
}
{% endschema %}